<resources>

    <!-- Style for the dark theme -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorBackgroundInverse</item>
        <item name="android:colorBackground">@color/colorBackgroundInverse</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="colorOnPrimary">@color/colorBackground</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="colorSurface">@color/colorSurfaceInverse</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryContainer">@color/colorAccentTranslucent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryContainer">@color/colorAccentTranslucent
        </item> <!-- Navbar item halo -->
        <item name="colorTertiary">@color/colorAccentLight</item>
        <item name="colorTertiaryContainer">@color/colorAccentTranslucent</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.App.TimePicker</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="colorOutline">@color/goodGray</item>
        <item name="colorSurfaceVariant">@color/goodGrayTranslucent</item>
        <item name="android:textColorTertiary">@color/textColorSecondaryInverse</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="switchStyle">@style/CustomMaterialSwitch</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigation</item>
        <item name="bottomAppBarStyle">@style/CustomBottomAppBar</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="android:navigationBarColor">@color/deepGray</item>
    </style>

    <!-- Monet theme -->
    <style name="AppTheme.Monet" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowLightStatusBar">false</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.App.TimePicker</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Monet
        </item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Monet</item>
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="SplashTheme.Night.Legacy" />

    <style name="SplashTheme.Night" parent="SplashTheme.Base">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorBackgroundInverse</item>
        <item name="android:colorBackground">@color/colorBackgroundInverse</item>
        <item name="android:navigationBarColor">@color/colorBackgroundInverse</item>
    </style>

    <style name="SplashTheme.Night.Legacy">
        <item name="android:windowBackground">@drawable/static_birday_dark</item>
    </style>

